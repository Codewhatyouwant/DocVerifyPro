<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".ResumeSavedSkills">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            app:cardBackgroundColor="@color/teal_200">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/backBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:background="#00FFFFFF"
                    android:contentDescription="Home"
                    android:src="@drawable/back_svg"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Save Skills"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10sp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/person_circle" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:background="@drawable/drop_down_field"
                    android:layout_margin="10sp"
                    android:textColorHint="@color/light_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <AutoCompleteTextView
                    android:id="@+id/savedSkill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select From Saved"
                    android:inputType="none"
                    android:gravity="center"
                    android:padding="10sp"
                    android:background="@drawable/drop_down_field"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Skills"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:hint="Name of Skills"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:textSize="16sp"
                    android:background="@drawable/drop_down_field"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programing Language"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="Language"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="Language1"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="Language"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="Language1"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="Language"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="Language1"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="Language"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="Language1"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skill"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills1"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills1"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills1"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills1"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="185sp"
                        android:layout_height="50sp"
                        android:hint="skills1"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:background="@drawable/drop_down_field"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/save_button"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:text="Save"/>
            </LinearLayout>



        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>